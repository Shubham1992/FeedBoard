<android.support.design.widget.CoordinatorLayout
	android:id="@+id/main_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

<android.support.v4.widget.DrawerLayout

	android:id="@+id/drawer_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>


	<FrameLayout
		android:id="@+id/content_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="true">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
					android:id="@+id/cntainermain">

                    <android.support.v7.widget.Toolbar

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/toolbar"
                        android:background="#00BCD4"
                        android:layout_gravity="top"
						android:elevation="4dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/toolbartitle"
                            android:layout_gravity="center"
                            android:text="@string/app_name"
                            android:textColor="#ffffff"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            />
                    </android.support.v7.widget.Toolbar>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/cntainerBelowToolbar">


					<com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader
						android:id="@+id/header"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal|top"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="7dp"
						android:layout_marginRight="8dp"
						android:elevation="3dp">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"

							android:id="@+id/llCardContent"
							android:orientation="vertical"
							android:gravity="center">
							<FrameLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content">

								<ImageView
									android:layout_width="match_parent"
									android:layout_height="200dp"
                                    android:maxHeight="200dp"
									android:id="@+id/imgMain"
                                    android:scaleType="fitCenter"
									android:background="#ffffff"
									android:layout_gravity="center"/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_gravity="top|left"
									android:text="Most Watched"
									android:padding="10dp"
									android:id="@+id/topcomment"
									android:textStyle="bold"
									android:textColor="#ffffff"
									android:alpha=".7"/>

								<TextView
									android:layout_width="match_parent"
									android:layout_height="55dp"
									android:layout_gravity="bottom"
									android:background="#000000"
									android:alpha=".3"

									/>
								<TextView
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:padding="15dp"
									android:id="@+id/title"
									android:textSize="25dp"
									android:textStyle="bold"
									android:textColor="#ffffff"
									android:gravity="left"
									android:text="...................."
									android:layout_gravity="bottom"/>
							</FrameLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:background="#ffffff"
								android:orientation="horizontal"
								android:weightSum="1">

								<TextView
									android:layout_width="fill_parent"
									android:layout_height="wrap_content"
									android:text="..............................................."
									android:padding="10dp"
									android:textSize="15dp"
									android:textStyle="bold"
									android:id="@+id/tvDesc"
									android:layout_weight=".3"
									android:textColor="#000000"
									/>
								<LinearLayout
									android:layout_width="fill_parent"
									android:layout_height="match_parent"
									android:orientation="horizontal"
									android:padding="5dp"
									android:gravity="center"
									android:layout_centerVertical="true"
									android:layout_alignParentRight="true"
									android:layout_alignParentEnd="true"
									android:layout_weight=".7">
									<ImageView
										android:layout_width="32dp"
										android:layout_height="32dp"
										android:id="@+id/share"
										android:background="@drawable/ic_share_black_24dp"

										/>
									<TextView
										android:layout_width="1px"
										android:layout_height="30dp"
										android:background="#000000"
										android:id="@+id/textView"
										android:layout_marginRight="10dp"
										android:layout_marginLeft="10dp"/>

									<ImageView
										android:layout_width="33dp"
										android:layout_height="33dp"
										android:id="@+id/bookmark"
										android:background="@drawable/ic_bookmark_black_24dp"/>


								</LinearLayout>
							</LinearLayout>
						</LinearLayout>

					</LinearLayout>

					</com.bartoszlipinski.recyclerviewheader.RecyclerViewHeader>

					<android.support.v7.widget.RecyclerView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:id="@+id/rvHome"
						android:layout_gravity="center|top"/>

			</FrameLayout>

                </LinearLayout>



            </android.support.design.widget.AppBarLayout>







            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragmentHolder">

            </FrameLayout>

		</FrameLayout>
	</FrameLayout>


    <include
		android:id="@+id/left_drawer"
        layout="@layout/left_drawer"		>


    </include>


	<LinearLayout
		android:id="@+id/right_drawer"
		android:layout_width="240dp"
		android:layout_height="match_parent"
		android:layout_gravity="right"
		android:choiceMode="singleChoice"
		android:divider="@android:color/transparent"
		android:dividerHeight="0dp"
		android:background="#ffffff"
		android:orientation="vertical"/>
</android.support.v4.widget.DrawerLayout>
</android.support.design.widget.CoordinatorLayout><!-- From: file:/E:/FeedBoard/app/src/main/res/layout/activity_main.xml -->