<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/llCardContent"
        android:orientation="vertical"
        android:gravity="center">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/imgMain"
                android:background="@drawable/ronaldo"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:text="Most Watched"
                android:padding="10dp"
                android:id="@+id/topcomment"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:alpha=".7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:background="#000000"
                android:alpha=".3"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/title"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="left"
                android:text="Some Title"
                android:layout_gravity="bottom"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Some description that may be around three lines long"
                android:padding="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/tvHeadline"
                android:layout_weight=".3"
                android:textColor="#000000"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight=".7">
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/share"
                    android:background="@drawable/ic_share_black_24dp"

                    />
                <TextView
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:background="#000000"
                    android:id="@+id/textView"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:id="@+id/bookmark"
                    android:background="@drawable/ic_bookmark_black_24dp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/feeds/FeedBoard/app/src/main/res/layout/head2.xml -->